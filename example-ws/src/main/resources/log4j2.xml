<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-4r %-5p [%t] %l - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <AsyncRoot level="INFO" includeLocation="true">
            <AppenderRef ref="Console"/>
        </AsyncRoot>
    </Loggers>
</Configuration>